class Solution {
    public int waysToSplitArray(int[] nums) {
       int n = nums.length;
       long[] l = new long[n];
       long[] r = new long[n];
        l[0] = nums[0];
        for(int i = 1;i < n; i++){
            l[i] = l[i - 1] + nums[i];
        }
        for(int i = n - 2;i >= 0; i--){
            r[i] = r[i + 1] + nums[i + 1];
        }
        int cnt = 0;
        for(int i = 0;i < n - 1; i++){
            if(l[i] >= r[i]){
                cnt++;
            }
           
        }
        return cnt;
    }
}
