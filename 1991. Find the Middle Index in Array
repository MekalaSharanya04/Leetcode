1991. Find the Middle Index in Array
class Solution {
    public int findMiddleIndex(int[] nums) {
       int n = nums.length;
       int[] left = new int[n];
       int[] right = new int[n];
       for(int i = 1;i < n;i++){
       left[i] = left[i - 1] + nums[i - 1];
    }
    for(int i = n - 2;i >= 0;i--){
        right[i] = right[i + 1] + nums[i + 1];
    }
    int res = -1;
    for(int i = n - 1;i >= 0;i--){
        if(left[i] == right[i]){
            res = i;
        }
    }
    return res;
}
}
